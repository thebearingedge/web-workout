{
  "name": "web-workout",
  "version": "1.0.0",
  "description": "An in-browser front end tester (prototype).",
  "main": "index.js",
  "scripts": {
    "start": "node server/",
    "build": "webpack --mode=production",
    "dev": "npm-run-all --silent --parallel dev:*",
    "dev:client": "webpack-dev-server",
    "dev:server": "nodemon server/"
  },
  "nodemonConfig": {
    "exec": "node -r dotenv/config",
    "require": [
      "dotenv/config"
    ],
    "watch": [
      "server/"
    ],
    "ignore": [
      "server/public/"
    ]
  },
  "eslintIgnore": [
    "server/public/"
  ],
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "standard"
    ],
    "rules": {
      "padded-blocks": 0,
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.11.1",
    "babel-loader": "^8.1.0",
    "comlink": "^4.3.0",
    "copy-webpack-plugin": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "monaco-editor": "^0.20.0",
    "monaco-editor-textmate": "^2.2.1",
    "monaco-textmate": "^3.0.1",
    "onigasm": "^2.2.4",
    "prismjs": "^1.21.0",
    "remark-html": "^12.0.0",
    "remark-parse": "^8.0.3",
    "split.js": "^1.6.2",
    "tape": "^5.0.1",
    "unified": "^9.1.0"
  },
  "devDependencies": {
    "babel-plugin-prismjs": "^2.0.1",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.0.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "style-loader": "^1.2.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "worker-loader": "^3.0.1"
  }
}
